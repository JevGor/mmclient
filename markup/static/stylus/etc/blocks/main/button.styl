.button
  reset-button()
  
  box-sizing border-box
  display block
  width 100%
  padding 8px 5px
  
  border 1px solid transparent
  border-radius 30px
  &--blue
    color blueLight
    
    border-color blueLight
  &--blueMedium
    color blueMedium
    
    border-color blueMedium
    
  &--red
    color red
    
    border-color red
    
  &--grey
    color grey
    
    border-color grey
    
  &--white
    border-color white
    
  &--b2
    border-width 2px
  
  &--p20
    padding-top 20px
    padding-bottom 20px
  &--p15
    padding-top 15px
    padding-bottom 15px
  &--p5
    padding-top 5px
    padding-bottom 5px
    
  &--bgc-white
    background-color white
    
@media (max-width: 375px)
  .button
    &--iphoneX-p15
      padding-top 15px
      padding-bottom 15px
      
@media (max-width: 375px)
  .button
    &--iphone5-p10
      padding-top 10px
      padding-bottom 10px