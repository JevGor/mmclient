.referal__tab
  position relative
  
  margin-right 25px
  
  font-size 14px
  line-height 17px
  font-weight 100
  color blueDark
  text-transform uppercase
  text-decoration none
  &:last-child
    margin-right 0
  &--active
    color blueLight
    &::after
      content ''
      
      position absolute
      left 0
      right 0
      bottom -3px
      
      box-sizing border-box
      width 100%
      height 1px
      margin auto
      
      background-color blueLight
      
.referal__code
  reset()
  
  box-sizing border-box
  min-width 90px
  padding 12px 5px
  
  font-size 16px
  line-height 19px
  font-weight 100
  color blueDark
  text-transform uppercase
  text-align center
  
  background-color #fbfbfb
  
  border 1px solid #e1e1e1
  border-radius 5px
  
.referal__block
  display flex
  flex-direction column
  align-items center
  max-width 23.916667%
  
.referal__person-icon
  display block
  width 70px
  height auto
  .person
    width 100%
    height auto
    
    fill:none;stroke:#4cc5cf;stroke-linecap:round;stroke-width:3px;
    
.referal__list
  reset-list()
  
.referal__items
  padding 10px 0
  
  background-color greyLight
  &:nth-child(2n)
    background-color white
    
.referal__item-total
  padding-top 20px
  
  border-top 1px solid #e1e1e1
  
.referal__enter-code-inputWrap
  position relative
  
.referal__enter-code-input
  reset-input()
  
  padding-top 8px
  padding-right 155px
  padding-left 20px
  padding-bottom 8px
  
  border 1px solid grey
  border-radius 30px
  
.referal__block-button
  position relative
  &:hover
    .referal__block-button-description
      display block
  
.referal__block-button-description
  position absolute
  left -18px
  bottom -50px
  z-index 5
  
  display none
  min-width 350px
  padding 10px 5px
  
  font-size 16px
  line-height 19px
  font-weight 100
  color white
  
  background-color #4f858e
  
  border-radius 10px
  &::before
    content ''
    
    position absolute
    top -20px
    left 30px
    
    border: 10px solid transparent;
    border-bottom: 10px solid #4f858e;
  
.referal__enter-code-button
  reset-button()
  
  position absolute
  top 0
  right 0
  bottom 0
  
  min-width 145px
  margin auto
  padding-top 7px
  padding-bottom 7px
  
  border 1px solid blueLight
  border-radius 30px
  
.referal__button-save
  min-width 220px
  
.referal__share-icon
  margin-right 20px
  &:last-child
    margin-right 0
  &--fb,
  &--tw,
  &--inst
    width 41px
    height 41px
  &--fb
    .fb
      width 100%
      height auto
      
      fill:none;stroke:#5ecbd4;stroke-linecap:round;stroke-linejoin:round;stroke-width:4px;
  &--tw
    .tw
      width 100%
      height auto
      
      fill:none;stroke:#5ecbd4;stroke-linecap:round;stroke-linejoin:round;stroke-width:4px;
  &--inst
    .inst
      width 100%
      height auto
      
      fill:none;stroke:#5ecbd4;stroke-linecap:round;stroke-linejoin:round;stroke-width:4px;
      
@media (max-width: 375px)
  .referal__block-button-description
    bottom -73px
    
    min-width 300px
    
@media (max-width: 340px)
  .referal__block-button-description
    min-width 260px